{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "types": ["mocha", "chai"],
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
